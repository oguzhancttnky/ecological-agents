DB_HOST=localhost
DB_PORT=5432
DB_NAME=lab
DB_USER=lab_user
DB_PASSWORD=lab_pass
OLLAMA_HOST=http://localhost:11434
# sudo systemctl edit ollama
# [Service]
# Environment="OLLAMA_NUM_PARALLEL=10"
# Environment="OLLAMA_MAX_LOADED_MODELS=2"
LLM_MODEL=qwen2.5:1.5b
EMBEDDING_MODEL=nomic-embed-text
LLM_TEMPERATURE=0.3
OLLAMA_TIMEOUT_SECONDS=90
OLLAMA_MAX_RETRIES=3
OLLAMA_RETRY_BACKOFF_SECONDS=1.5
AGENT_COUNT=10
TICKS=30
PERIODIC_REPLAN_INTERVAL=24
BOREDOM_THRESHOLD=0.75
STRESS_THRESHOLD=0.75

# Tick engine â€” tuned for single-node Ollama (one request at a time)
TICK_REQUEST_TIMEOUT_S=0
TICK_DEADLINE_S=86400
MAX_CONCURRENT_LLM=10

# Compute budget defaults
COMPUTE_PER_LLM_CALL=0.15
COMPUTE_REGEN_PER_TICK=0.10
COMPUTE_MIN_THRESHOLD=0.05

# Entropy defaults
ENTROPY_GROWTH_RATE=0.02
ENTROPY_CONTRADICTION_BOOST=0.05
ENTROPY_DECAY_ON_SUMMARIZE=0.10
ENTROPY_HALLUCINATION_SCALE=0.40

# Tool gating thresholds
THRESHOLD_VERIFICATION_TOOL=0.30
THRESHOLD_COALITION_FORMATION=0.40
THRESHOLD_DATA_RETRIEVAL=0.25
THRESHOLD_ADVANCED_PLANNING=0.55

# Irreversibility triggers
CONSECUTIVE_DISTORTIONS_THRESHOLD=3
FAILED_VERIFICATIONS_ENTROPY_THRESHOLD=5
IRREVERSIBLE_DAMAGE_PER_BETRAYAL=0.10
ENTROPY_FLOOR_RAISE_PER_TRIGGER=0.05

# Temporal decay
OPPORTUNITY_WINDOW_TICKS=8
OPPORTUNITY_MISSED_RESOURCE_PENALTY=0.06

# Experiment plan
EXPERIMENT_MODES=full_system,no_memory,no_trust,no_verification,no_uncertainty,no_social_pressure,no_identity_pressure,no_consequence,heuristic_only,no_compute_pressure,no_entropy,no_tool_gating,no_irreversibility,no_deadlines
EXPERIMENT_SEEDS=11
OUTPUT_DIR=outputs
LOG_LEVEL=INFO
LOG_TICK_INTERVAL=10
